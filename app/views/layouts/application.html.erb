<!DOCTYPE html>
<html>
  <head>
    <title>HTL Radar</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main">
      <!-- DIMMER -->
      <div class="dimmer w-100 h-100 position-fixed">

      </div>

      <!-- Sidebar -->
      <%= render 'overview/sidebar' %>

      <!-- Content -->
      <div id="content" class="py-5 scrollable w-100">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
